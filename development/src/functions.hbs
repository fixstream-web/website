            {{#if subnav}}
            {{#with subnav}}
            {{#each items}}
    case "{{../../../../this.slug}}/{{../../this.slug}}/{{slug}}": $load = locate_template('{{../../../../this.slug}}/{{../../this.slug}}/{{slug}}.php', true); break;
            {{/each}}
            {{/with}}
            {{/if}}
        {{/each}}
        {{/with}}
        {{/if}}
    {{/each}}
    {{/with}}
    default:
    {{!-- Do we need a default? --}}
  }
  if ($load) {
        exit();
  }
}


