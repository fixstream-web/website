{{#embed "templates/page" data=pages.index additionalClasses="page-index"}}
{{#content "head" mode="append"}}
{{!-- append page specific head tags --}}
{{/content}}
{{#content "body" mode="append"}}
{{!-- page specific body content --}}

{{#embed "modules/section" name="hero" extras=extras}}
{{#content "contents" mode="append"}}
				<h1 class="section-headline hero-headline">{{data.h1}}</h1>
				<p class="section-intro hero-intro">{{data.hero.intro}}</p>
				<a class="section-cta hero-cta button" href="{{data.hero.cta.meta.url}}">{{data.hero.cta.value}}</a>
				<ul class="hero-solutions__list row">
					{{> modules/hero-solution-item
					icon="icon-accurate-inventory.svg"
					category="Accurate Inventory"
					class="accurate-inventory"
					blurb="Agent-less Autodiscovery to create accurate topology maps and automatically update your CMDB"
					link="#"}}
					{{> modules/hero-solution-item
					icon="icon-full-stack-correlation.svg"
					category="Full Stack Correlation"
					class="full-stack-correlation"
					blurb="Automated transactions to application to infra mapping to help you resolve IT problems in minutes"
					link="#"}}
					{{> modules/hero-solution-item
					icon="icon-ai.svg"
					category="AI"
					class="ai"
					blurb="Powerful ML to help you accurately predict and resolve complex issues"
					link="#"}}
				</ul>
{{/content}}
{{/embed}}

{{#embed "modules/section" name="success-stories"}}
{{#content "contents" mode="append"}}
