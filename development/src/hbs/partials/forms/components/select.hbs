<div class="select-box {{#if hidden}}hidden{{/if}}">
	<select
		   id="{{#both primaryClass id}}{{primaryClass}}-{{id}}{{else}}{{for}}{{/both}}"
		   {{#if additionalClasses}}class="{{additionalClasses}}"{{/if}}
		   {{#if name}}name="{{name}}"{{/if}}
		   {{#if value}}value="{{value}}"{{/if}}
		   {{#if required}}required{{/if}} />
		   {{#block "options"}}
		   {{/block}}
	</select>
	<span class="select-box__ui">&#x21F3;</span>
</div>