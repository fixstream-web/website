<ul class="globalnav__subnav">
						{{#each subpages}}
						<li class="globalnav__item{{#if this.subpages}} with-subnav{{/if}}">
							<a class="globalnav__link" href="{{#if ../grandparent}}/{{../grandparent}}{{/if}}/{{../parent}}/{{this.slug}}">- {{this.meta.title}}
							</a>
							{{#if subpages}}
		        		{{> global/components/checkbox-toggle additionalClasses="globalnav__subnav-button" for=(concat 'subnavToggle-' @index) label="+"}}
								{{> global/components/subnav parent=this.slug grandparent=../parent}}{{~!}}
							{{/if}}
						</li>
						{{/each}}
					</ul>